{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2018",
    "lib": ["ES2020", "WebWorker"],
    "types": ["@cloudflare/workers-types", "jest", "node"],
    "module": "commonjs",
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["./src/*.ts", "./test/*.ts", "./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules/", "dist/"]
}
